<div id="motto">
    <h1 style="color:white">Edit Your Review</h1>
</div>
<div class="row">
    <div class="col-md-12 well">
        <%= simple_form_for [@bath, @review] do |f| %>
        <div class= "col-md-6 col-md-offset-3">
            <div class="field">
                <%= f.input :rating, :collection => 1..5, placeholder: 'Rate this bathroom from 1-5' %>
            </div>

            <div class="field">
                <%= f.input :post, as: :text %>
            </div>
                <%= f.button :submit, "Submit edit", class: "btn btn-success" %>
        <% end %>
    </div>
</div>
</div>
