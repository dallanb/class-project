<div id="motto">
    <h1 style="color: white">Here You Can Accept Or Deny Bathroom Requests</h1>
</div>
<div class="container-fluid">
<!--this will be a potential problem when our database gets full so make sure you change it-->

        <div class="row" >
            <div class="col-md-6 col-md-offset-3" style="min-width: 450px">
                <% @baths.each do |bath| %>

                    <table class="table">
                      <tr>
                        <th> </th>
                        <td style="font-size:25px; float:left;"><b><%= bath.name %></b></td>
                      </tr>
                        <tr>
                            <th><b></b>Address</b></th>
                            <td><%= bath.address %></td>
                        </tr>
                        <tr>
                            <th><b>City</b></th>
                            <td><%= bath.city %></td>
                        </tr>
                        <tr>
                            <th><b>Province/State</b></th>
                            <td><%= bath.province %></td>
                        </tr>
                        <tr>
                            <th><b>Country</b></th>
                            <td><%= bath.country %></td>
                        </tr>
                        <tr>
                            <th><b><b>Longitude</b></th>
                            <td><%= bath.longitude %></td>
                        </tr>

                        <tr>
                            <th><b><b>Latitude</b></th>
                            <td><%= bath.latitude %></td>
                        </tr>

                        <tr>
                           <td><%= form_for bath do |t| %>
                                 <%= t.hidden_field :admin_accept, :value => true %>
                                 <%= t.submit 'Accept', class: 'btn btn-success' %>
                               <% end %>

                            <!--i dont know how to center this-->
                            <div class="centerize">
                                <th><%= button_to('Destroy', bath, method: :delete, data: { confirm: "You sure?" }, :class => 'btn btn-danger')  %></th>
                            </div>
                        </td>
                    </table>
                <% end %>
            </div>
        </div>

</div>
