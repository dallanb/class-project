<div id="motto">
    <h1 style="color: white">Bathrooms You Have Requested To Add</h1>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 col-md-offset-3" style="min-width: 450px;">
            <% @baths.each do |bath| %>
                <table class="table">
                  <tr>
                    <th> </th>
                    <td style="font-size:25px; float:left;"><b><%= bath.name %></b></td>
                  </tr>
                    <tr>
                        <th><b>Address</b></th>
                        <td><b><%= bath.address %></b></td>
                    </tr>
                    <tr>
                        <th><b>City</b></th>
                        <td><b><%= bath.city %></b></td>
                    </tr>
                    <tr>
                        <th><b>Province/State</b></th>
                        <td><b><%= bath.province %></b></td>
                    </tr>
                    <tr>
                        <th><b>Country</b></th>
                        <td><b><%= bath.country %></b></td>
                    </tr>

                    <tr>
                        <th><b>Longitude</b></th>
                        <td><b><%= bath.longitude %></b></td>
                    </tr>

                    <tr>
                        <th><b>Latitude</b></th>
                        <td><b><%= bath.latitude %></b></td>
                    </tr>

                    <tr>
                        <th><b>Status</b></th>
                        <% if bath.admin_accept == true %>
                            <td><b><font color="green">Approved</font></b></td>
                        <% else %>
                            <td><b><font color="red">Pending</font></b></td>
                        <% end %>
                    </tr>
                </table>
            <% end %>
        </div>
    </div>
</div>
