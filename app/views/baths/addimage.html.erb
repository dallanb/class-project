<div class="smallmotto">
    <h2>Add Your Image</h2>
</div>
<div class="container-fluid">
<div class="row" >
    <div class="col-md-6 col-md-offset-3" style="min-width: 450px">
        <%= simple_form_for @bath, html: {multipart: true, class: 'form-horizontal'} do |f| %>
            <%= f.label :image %><br />
            <%= f.file_field :image, autofocus: true %>

            <%= f.button :submit, "Add Image", class: "btn btn-success" %>
        <% end %>
    </div>
</div>
</div>
